<h1> Bill splitter </h1>

<div class="col-md-6">
 <%= form_tag billsplitter_path do %>
   <div class="form-group">
     <label for="amount">Amount</label>
     <div class="input-group">
        <div class="input-group-addon">$</div>
        <input type="text" id="amount" name="amount" class="form-control" value="">
     </div>
   </div>

   <div class="form-group">
     <label for="tax">Tax</label>
     <div class="input-group">
        <div class="input-group-addon">%</div>
        <input type="text" id="tax" name="tax" class="form-control" value="">
     </div>
   </div>

   <div class="form-group">
     <label for="tip">Tip</label>
     <div class="input-group">
        <div class="input-group-addon">%</div>
        <input type="text" id="tip" name="tip" class="form-control" value="">
     </div>
   </div>

   <div class="form-group">
     <label for="count">Number Of People</label>
     <input type="text" id="count" name="nop" class="form-control" value="">
   </div>

   <input type="submit" value="Submit" class="btn btn-primary">
<% end %>
</div>
<div class="row">
  <div class="col-md-12">
<% if @total.nan? %>
<% else %>
      <h1><span class="label label-primary"><%= "Each person should pay #{(@total).round(2)}" %></span></h1>
<% end %>
  </div>
</div>
